{
    "name": "mypy-type-checker",
    "displayName": "Mypy Type Checker",
    "description": "%extension.description%",
    "version": "2023.1.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "Mypy",
        "module": "mypy"
    },
    "publisher": "ms-python",
    "license": "MIT",
    "homepage": "https://github.com/<my-github>/<my-extension-project>",
    "repository": {
        "type": "git",
        "url": "https://github.com/<my-github>/<my-extension-project>.git"
    },
    "bugs": {
        "url": "https://github.com/<my-github>/<my-extension-project>/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "mypy"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:mypy.ini"
    ],
    "icon": "icon.png",
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o mypy.vsix"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "mypy-type-checker.args": {
                    "default": [
                        "--follow-imports=silent",
                        "--ignore-missing-imports",
                        "--no-pretty"
                    ],
                    "description": "%settings.args.description%",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "mypy-type-checker.path": {
                    "default": [],
                    "description": "%settings.path.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "mypy-type-checker.importStrategy": {
                    "default": "fromEnvironment",
                    "description": "%settings.importStrategy.description%",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "%settings.importStrategy.useBundled.description%",
                        "%settings.importStrategy.fromEnvironment.description%"
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "mypy-type-checker.interpreter": {
                    "default": [],
                    "description": "%settings.interpreter.description%",
                    "scope": "window",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "mypy-type-checker.severity": {
                    "default": {
                        "error": "Error",
                        "note": "Information"
                    },
                    "additionalProperties": {
                        "type": "string",
                        "enum": [
                            "Error",
                            "Hint",
                            "Information",
                            "Warning"
                        ]
                    },
                    "description": "%settings.severity.description%",
                    "scope": "resource",
                    "type": "object"
                },
                "mypy-type-checker.showNotifications": {
                    "default": "off",
                    "description": "%settings.showNotifications.description%",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "%settings.showNotifications.off.description%",
                        "%settings.showNotifications.onError.description%",
                        "%settings.showNotifications.onWarning.description%",
                        "%settings.showNotifications.always.description%"
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "%command.restartServer%",
                "category": "Mypy",
                "command": "mypy-type-checker.restart"
            }
        ]
    },
    "dependencies": {
        "fs-extra": "^11.1.0",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/node": "14.x",
        "@types/vscode": "1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^2.18.0",
        "eslint": "^8.36.0",
        "glob": "^9.3.0",
        "prettier": "^2.8.4",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.2",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1"
    }
}
